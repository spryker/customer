<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Address">
        <property name="email" dataBuilderRule="email" />
        <property name="salutation" dataBuilderRule="randomElement(['Mr', 'Mrs'])"  />
        <property name="firstName" dataBuilderRule="firstName" />
        <property name="lastName" dataBuilderRule="lastName" />
        <property name="address1" dataBuilderRule="address" />
        <property name="company" dataBuilderRule="company" />
        <property name="city" dataBuilderRule="city" />
        <property name="zipCode" dataBuilderRule="postcode" />
        <property name="phone" dataBuilderRule="e164PhoneNumber" />
        <property name="state" dataBuilderRule="country" />
        <property name="iso2Code" dataBuilderRule="=DE" />
    </transfer>

    <transfer name="Customer">
        <property name="email" type="string" dataBuilderRule="email" />
        <property name="firstName" type="string" dataBuilderRule="firstName" />
        <property name="lastName" type="string" dataBuilderRule="lastName" />
        <property name="company" type="string" dataBuilderRule="company" />
        <property name="gender" type="string" dataBuilderRule="randomElement(['Male', 'Female'])" />
        <property name="dateOfBirth" type="string" dataBuilderRule="date('Y-m-d', '-20 years')" />
        <property name="salutation" type="string" dataBuilderRule="randomElement(['Mr', 'Mrs'])" />
        <property name="isGuest" type="bool" dataBuilderRule="=false"/>
        <property name="locale" type="Locale" dataBuilderRule="locale"/>
    </transfer>

</transfers>

