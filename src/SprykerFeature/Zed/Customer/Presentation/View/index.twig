{% extends '@Gui/Layout/layout.twig' %}

{% block head_title 'View customer' | trans %}
{% block section_title 'View customer' | trans %}

{% block content %}

    <p>
        <a href="/customer/" class="btn btn-default">{{ 'Back to Customers' | trans }}</a>&nbsp;&nbsp;&nbsp;
        <a href="/customer/edit?id_customer={{ id_customer }}" class="btn btn-sm btn-warning">{{ 'Edit Customer' | trans }}</a>&nbsp;&nbsp;&nbsp;
        <a href="/customer/address/?id_customer={{ id_customer }}" class="btn btn-sm btn-default">{{ 'Manage Addresses' | trans }}</a>
    </p>

    <div>
        <h1>{{ customer.salutation }} {{ customer.last_name }} {{ customer.first_name }}</h1>

        <table class="table">
            <thead></thead>
            <tbody>
                <tr>
                    <th>{{ 'Email' | trans }}</th>
                    <td>{{ customer.email }}</td>
                </tr>
                <tr>
                    <th>{{ 'Customer ID' | trans }}</th>
                    <td>{{ customer.id_customer }}</td>
                </tr>
                <tr>
                    <th>{{ 'Gender' | trans }}</th>
                    <td>{{ customer.gender }}</td>
                </tr>
            </tbody>
            <tfoot></tfoot>
        </table>
    </div>

{% endblock %}
