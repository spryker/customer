<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Address">
        <property name="email" type="string" dataBuilderRule="email" />
        <property name="salutation" type="string" dataBuilderRule="randomElement(['Mr', 'Mrs'])"  />
        <property name="firstName" type="string" dataBuilderRule="firstName" />
        <property name="lastName" type="string" dataBuilderRule="lastName" />
        <property name="address1" type="string" dataBuilderRule="address" />
        <property name="company" type="string" dataBuilderRule="company" />
        <property name="city" type="string" dataBuilderRule="city" />
        <property name="zipCode" type="string" dataBuilderRule="postcode" />
        <property name="phone" type="string" dataBuilderRule="e164PhoneNumber" />
        <property name="state" type="string" dataBuilderRule="country" />
        <property name="iso2Code" type="string" dataBuilderRule="=DE" />
    </transfer>

    <transfer name="Addresses">
        <property name="addresses" type="Address[]" singular="Address" />
    </transfer>

    <transfer name="Customer">
        <property name="email" type="string" dataBuilderRule="email" />
        <property name="idCustomer" type="int" />
        <property name="customerReference" type="string" />
        <property name="firstName" type="string" dataBuilderRule="firstName" />
        <property name="lastName" type="string" dataBuilderRule="lastName" />
        <property name="company" type="string" dataBuilderRule="company" />
        <property name="gender" type="string" dataBuilderRule="randomElement(['Male', 'Female'])" />
        <property name="dateOfBirth" type="string" dataBuilderRule="date('Y-m-d', '-20 years')" />
        <property name="salutation" type="string" dataBuilderRule="randomElement(['Mr', 'Mrs'])" />
        <property name="password" type="string" />
        <property name="newPassword" type="string" />
        <property name="billingAddress" type="Address[]" />
        <property name="shippingAddress" type="Address[]" />
        <property name="addresses" type="Addresses" singular="address" />
        <property name="defaultBillingAddress" type="string" />
        <property name="defaultShippingAddress" type="string" />
        <property name="createdAt" type="string" />
        <property name="updatedAt" type="string" />
        <property name="restorePasswordKey" type="string" />
        <property name="restorePasswordDate" type="string" />
        <property name="registrationKey" type="string" />
        <property name="confirmationLink" type="string" />
        <property name="registered" type="string" />
        <property name="message" type="string" />
        <property name="sendPasswordToken" type="bool" />
        <property name="isGuest" type="bool" dataBuilderRule="=false"/>
        <property name="locale" type="Locale" dataBuilderRule="locale"/>
    </transfer>

    <transfer name="CustomerError">
        <property name="message" type="string" />
    </transfer>

    <transfer name="CustomerResponse">
        <property name="hasCustomer" type="bool" />
        <property name="customerTransfer" type="Customer" />
        <property name="isSuccess" type="bool" />
        <property name="errors" type="CustomerError[]" singular="error" />
    </transfer>

</transfers>

