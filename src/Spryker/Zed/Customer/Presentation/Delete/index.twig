{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Customer deletion confirmation' %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ backActionButton(url('/customer/view', {'id-customer': idCustomer}), 'Back to Customer View' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            <a href="{{ url('/customer/view', {'id-customer': idCustomer}) }}" class="btn btn-back">{{ 'Back' | trans}}</a>
            <a href="{{ url('/customer/delete/confirm', {'id-customer': idCustomer}) }}" class="btn btn-danger">{{ 'Delete account' | trans}}</a>

        {% endblock %}

    {% endembed %}

{% endblock %}
