{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Customer deletion confirmation' %}

{% block head_title %}
    {{ widget_title | trans }}
{% endblock %}
{% block section_title %}
    {{ widget_title | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton(app.request.headers.get('referer'), 'Back' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}
            {{ form_start(customerDeleteForm, {'action': '/customer/delete/confirm'}) }}
                {{ form_widget(customerDeleteForm.idCustomer) }}

                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-back">{{ 'Back' | trans}}</a>
                <button class="btn btn-danger safe-submit">{{ 'Delete account' | trans}}</button>
            {{ form_end(customerDeleteForm) }}
        {% endblock %}

    {% endembed %}

{% endblock %}
